    <script src="auth-helper.js"></script>
    <script>
        let currentTenantId = null;

        // Logout handler
        function handleLogout() {
            AuthHelper.logout();
        }

        // Initialize page
        async function initPage() {
            console.log('[Consultant Dashboard] Initializing...');

            // Initialize tenant context
            await AuthHelper.initTenant();
            currentTenantId = AuthHelper.getTenantId();
            console.log('[Consultant Dashboard] Tenant ID:', currentTenantId);

            // Protect page - only consultants can access
            const granted = await AuthHelper.protectPage('consultant-dashboard.html');
            if (!granted) {
                console.log('[Consultant Dashboard] Access denied');
                return;
            }

            const user = AuthHelper.getCurrentUser();
            console.log('[Consultant Dashboard] Current user:', user);

            // Verify user is consultant
            if (user.role !== 'consultant') {
                console.log('[Consultant Dashboard] User is not a consultant');
                alert('This page is only accessible to consultants.');
                window.location.href = 'dashboard.html';
                return;
            }

            // Update user info in sidebar
            updateUserInfo(user);

            // Load dashboard data
            await loadDashboardData();
        }

        // Update user info in sidebar
        function updateUserInfo(user) {
            const displayName = user.full_name || user.name || user.email.split('@')[0];
            const initials = displayName.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2);

            document.getElementById('user-name').textContent = displayName;
            document.getElementById('user-avatar').textContent = initials;
            document.getElementById('user-role').textContent = 'Consultant';
            document.getElementById('user-role-badge').textContent = 'Consultant';
        }

        // Load all dashboard data
        async function loadDashboardData() {
            console.log('[Consultant Dashboard] Loading data...');

            await Promise.all([
                loadClients(),
                loadStats(),
                loadRecentActivity()
            ]);
        }

        // Load clients
        async function loadClients() {
            try {
                const user = AuthHelper.getCurrentUser();
                
                // Get clients assigned to this consultant
                const response = await fetch(
                    `https://growthmanagerpro-backend.vercel.app/api/users?tenant_id=${currentTenantId}`,
                    {
                        headers: {
                            'X-Tenant-ID': currentTenantId
                        }
                    }
                );

                if (!response.ok) {
                    throw new Error('Failed to load clients');
                }

                const data = await response.json();
                console.log('[Consultant Dashboard] Users data:', data);

                // Filter for clients only
                const clients = data.users?.filter(u => u.user_type === 'client') || [];
                console.log('[Consultant Dashboard] Clients:', clients);

                displayClients(clients);
            } catch (error) {
                console.error('[Consultant Dashboard] Error loading clients:', error);
                document.getElementById('clients-container').innerHTML = `
                    <div class="empty-state">
                        <div class="icon">‚ö†Ô∏è</div>
                        <p>Error loading clients</p>
                    </div>
                `;
            }
        }

        // Display clients
        function displayClients(clients) {
            const container = document.getElementById('clients-container');

            if (clients.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">üë•</div>
                        <p>No clients yet</p>
                    </div>
                `;
                return;
            }

            const html = `
                <div class="client-list">
                    ${clients.slice(0, 5).map(client => `
                        <div class="client-item">
                            <div class="client-info">
                                <div class="client-avatar">${getInitials(client.full_name || client.email)}</div>
                                <div class="client-details">
                                    <div class="client-name">${client.full_name || client.email.split('@')[0]}</div>
                                    <div class="client-status">${client.status || 'Active'}</div>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;

            container.innerHTML = html;
        }

        // Load stats
        async function loadStats() {
            try {
                const user = AuthHelper.getCurrentUser();
                
                // Get all users to count clients
                const usersResponse = await fetch(
                    `https://growthmanagerpro-backend.vercel.app/api/users?tenant_id=${currentTenantId}`,
                    {
                        headers: {
                            'X-Tenant-ID': currentTenantId
                        }
                    }
                );

                if (!usersResponse.ok) {
                    throw new Error('Failed to load stats');
                }

                const usersData = await usersResponse.json();
                const clients = usersData.users?.filter(u => u.user_type === 'client') || [];

                // Get deals to count contracts
                const dealsResponse = await fetch(
                    `https://growthmanagerpro-backend.vercel.app/api/deals?tenant_id=${currentTenantId}`,
                    {
                        headers: {
                            'X-Tenant-ID': currentTenantId
                        }
                    }
                );

                let totalRevenue = 0;
                let activeContracts = 0;

                if (dealsResponse.ok) {
                    const dealsData = await dealsResponse.json();
                    const deals = dealsData.deals || [];
                    
                    activeContracts = deals.filter(d => d.stage === 'won').length;
                    totalRevenue = deals
                        .filter(d => d.stage === 'won')
                        .reduce((sum, d) => sum + (parseFloat(d.amount) || 0), 0);
                }

                // Update stats
                document.getElementById('total-clients').textContent = clients.length;
                document.getElementById('client-limit').textContent = `of 5 limit`;
                
                document.getElementById('active-contracts').textContent = activeContracts;
                document.getElementById('contracts-progress').textContent = `${activeContracts} in progress`;
                
                document.getElementById('total-revenue').textContent = `$${totalRevenue.toLocaleString()}`;
                
                document.getElementById('deliverables-count').textContent = '0';
                document.getElementById('deliverables-total').textContent = 'of 0 total';

            } catch (error) {
                console.error('[Consultant Dashboard] Error loading stats:', error);
            }
        }

        // Load recent activity
        async function loadRecentActivity() {
            try {
                // Get recent prospects/deals activity
                const response = await fetch(
                    `https://growthmanagerpro-backend.vercel.app/api/prospects?tenant_id=${currentTenantId}`,
                    {
                        headers: {
                            'X-Tenant-ID': currentTenantId
                        }
                    }
                );

                if (!response.ok) {
                    throw new Error('Failed to load activity');
                }

                const data = await response.json();
                const prospects = data.prospects || [];

                // Get recently updated prospects
                const recentProspects = prospects
                    .sort((a, b) => new Date(b.updated_at) - new Date(a.updated_at))
                    .slice(0, 5);

                displayActivity(recentProspects);
            } catch (error) {
                console.error('[Consultant Dashboard] Error loading activity:', error);
                document.getElementById('activity-container').innerHTML = `
                    <div class="empty-state">
                        <div class="icon">‚ö†Ô∏è</div>
                        <p>Error loading activity</p>
                    </div>
                `;
            }
        }

        // Display recent activity
        function displayActivity(prospects) {
            const container = document.getElementById('activity-container');

            if (prospects.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">üìã</div>
                        <p>No recent activity</p>
                    </div>
                `;
                return;
            }

            const html = `
                <div class="activity-list">
                    ${prospects.map(prospect => `
                        <div class="activity-item">
                            <div class="activity-title">${prospect.full_name || prospect.email}</div>
                            <div class="activity-time">Updated ${formatDate(prospect.updated_at)}</div>
                        </div>
                    `).join('')}
                </div>
            `;

            container.innerHTML = html;
        }

        // Helper: Get initials from name
        function getInitials(name) {
            if (!name) return '?';
            return name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2);
        }

        // Helper: Format date
        function formatDate(dateString) {
            if (!dateString) return 'Unknown';
            
            const date = new Date(dateString);
            const now = new Date();
            const diffTime = Math.abs(now - date);
            const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

            if (diffDays === 0) return 'Today';
            if (diffDays === 1) return 'Yesterday';
            if (diffDays < 7) return `${diffDays} days ago`;
            if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
            
            return date.toLocaleDateString();
        }

        // Initialize on page load
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initPage);
        } else {
            initPage();
        }
    </script>
</body>
</html>
