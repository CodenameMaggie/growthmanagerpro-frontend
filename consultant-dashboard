    <script src="/auth-helper.js"></script>
    <script>
        const API_BASE = 'https://growthmanagerpro-backend.vercel.app';
        let currentUserId = null;
        let currentTenantId = null;
        let currentUser = null;

        // Tier configurations
        const TIERS = {
            starter: { name: 'Starter', price: 99, clients: 5 },
            professional: { name: 'Professional', price: 299, clients: 15 },
            premium: { name: 'Premium', price: 599, clients: 50 }
        };

        async function init() {
            // Check authentication
            const user = localStorage.getItem('currentUser');
            
            // If no user AND we're previewing locally (file:// protocol), use test data
            if (!user && window.location.protocol === 'file:') {
                console.log('üîç PREVIEW MODE - Using test data');
                currentUser = {
                    id: 'preview-consultant-id',
                    tenant_id: 'preview-tenant-id',
                    full_name: 'Maggie Forbes',
                    email: 'preview@example.com',
                    role: 'consultant',
                    subscription_tier: 'starter'
                };
                currentUserId = currentUser.id;
                currentTenantId = currentUser.tenant_id;
            } else if (!user) {
                // No user and we're on a real domain - redirect to login
                window.location.href = '/login.html';
                return;
            } else {
                // User is logged in
                currentUser = JSON.parse(user);
                currentUserId = currentUser.id;
                currentTenantId = currentUser.tenant_id;

                // Check if user is consultant
                if (currentUser.role !== 'consultant') {
                    alert('Access denied. This portal is for consultants only.');
                    window.location.href = '/dashboard.html';
                    return;
                }
            }

            displayUserInfo();
            await loadDashboardData();
        }

        function displayUserInfo() {
            const userName = document.getElementById('userName');
            const userAvatar = document.getElementById('userAvatar');

            const displayName = currentUser.full_name || currentUser.name || currentUser.email.split('@')[0];
            userName.textContent = displayName;
            userAvatar.textContent = displayName.charAt(0).toUpperCase();
        }

        async function loadDashboardData() {
            try {
                // Load consultant's tier info
                displayTierInfo();

                // Load clients (when API is ready)
                // const clientsResponse = await fetch(`${API_BASE}/api/consultant/clients?user_id=${currentUserId}`);
                // if (clientsResponse.ok) {
                //     const clientsData = await clientsResponse.json();
                //     updateClientStats(clientsData.data);
                // }

                // For now, show empty state
                updateClientStats([]);

            } catch (error) {
                console.error('Error loading dashboard:', error);
            }
        }

        function displayTierInfo() {
            // Get tier from user metadata or default to starter
            const tier = currentUser.subscription_tier || 'starter';
            const tierInfo = TIERS[tier] || TIERS.starter;

            document.getElementById('tierName').textContent = tierInfo.name;
            document.getElementById('tierPrice').textContent = `$${tierInfo.price}/month`;
            document.getElementById('tierLimits').textContent = `Up to ${tierInfo.clients} active clients`;
            document.getElementById('clientsLimit').textContent = `of ${tierInfo.clients} limit`;
        }

        function updateClientStats(clients) {
            const activeClients = clients.filter(c => c.status === 'active');
            
            document.getElementById('totalClients').textContent = clients.length;
            document.getElementById('activeContracts').textContent = activeClients.length;
            document.getElementById('contractsStatus').textContent = `${activeClients.length} in progress`;

            if (clients.length === 0) {
                return;
            }

            // Display active clients
            const container = document.getElementById('activeClients');
            container.innerHTML = clients.slice(0, 5).map(client => `
                <div class="client-item" onclick="window.location.href='/client-success.html?client=${client.id}'">
                    <div class="client-info">
                        <h4>${client.name}</h4>
                        <p>${client.company || 'No company'}</p>
                    </div>
                    <span class="client-status">${client.status || 'active'}</span>
                </div>
            `).join('');
        }

        function logout() {
            if (window.location.protocol === 'file:') {
                alert('Preview mode - logout disabled. This will work when deployed.');
                return;
            }
            localStorage.removeItem('currentUser');
            localStorage.removeItem('authToken');
            window.location.href = '/login.html';
        }

        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
